@model Book

@{
    ViewData [ "Title" ] = Model.Title;
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@Model.Title</h1>

    <div class="row">
        <div class="col-md-4 text-center">
            @if ( !string.IsNullOrEmpty( Model.ImageUrl ) )
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" />
            }
            else
            {
                <img src="https://via.placeholder.com/300" alt="Placeholder Image" class="img-fluid rounded" />
            }
        </div>
        <div class="col-md-8">
            <h2>Details</h2>
            <dl class="row">
                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString( "C" )</dd> 

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@(Model.Category?.Name ?? "N/A")</dd> 

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>
</div>
