@model Book

@{
    ViewData [ "Title" ] = Model.Title;
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4 text-center p-4">
                @if ( !string.IsNullOrEmpty( Model.ImageUrl ) )
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-width: 100%;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/300" alt="Placeholder Image" class="img-fluid rounded shadow-sm" style="max-width: 100%;" />
                }
            </div>
            <div class="col-md-8 p-4">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">@Model.Title</h1>

                    <dl class="row">
                        <dt class="col-sm-3"><i class="bi bi-person-fill"></i> Author</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3"><i class="bi bi-currency-dollar"></i> Price</dt>
                        <dd class="col-sm-9 text-success">@Model.Price.ToString( "C" )</dd>

                        <dt class="col-sm-3"><i class="bi bi-list"></i> Category</dt>
                        <dd class="col-sm-9">@(Model.Category?.Name?? "N/A")</dd>

                        <dt class="col-sm-3"><i class="bi bi-info-circle"></i> Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-arrow-left"></i> Back to List</a>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline-block">
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-cart-fill"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
