@model List<Book>
@{
    ViewData [ "Title" ] = "Home Page";
}

<h1 class="text-center my-4">Books Collection</h1>

<div class="row">
    @foreach ( var book in Model )
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm border-0 rounded">

                <div class="card-img-container d-flex align-items-center justify-content-center bg-light" style="height: 250px;">
                    <img src="@Url.Content(book.ImageUrl)" class="img-fluid" alt="Book Image" style="max-height: 100%; max-width: 100%; object-fit: cover; border-radius: 5px;" />
                </div>

                <div class="card-body">
                    <h5 class="card-title text-center font-weight-bold">@book.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted text-center">by @book.Author</h6>
                    <p class="card-text text-truncate" style="max-height: 70px;">@Html.DisplayFor( m => book.Description )</p>
                    <p class="card-text"><strong>Price:</strong> @book.Price.ToString( "C" )</p>

                    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-info-circle"></i> Details
                        </a>

                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="m-0">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-cart"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
